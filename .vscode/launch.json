{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "electron",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}\\node_modules\\.bin\\electron.cmd"
      },
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "."
      ],
      "env": {
        "ELECTRON_ENABLE_LOGGING": "1"
      },
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Electron: Attach Renderer (9222)",
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}",
      "timeout": 30000
    }
  ],
  "compounds": [
    {
      "name": "Electron: Main + Renderer",
      "configurations": [
        "Electron: Main",
        "Electron: Attach Renderer (9222)"
      ]
    }
  ]
}
